{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Luna",
  "version": "0.1.0",
  "identifier": "dev.Lunafn",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Luna",
        "width": 1200,
        "height": 800,
        "resizable": false,
        "alwaysOnTop": false,
        "fullscreen": false,
        "visible": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["havoc"]
      }
    }
  }
}
